#!/usr/bin/perl
use warnings;
use strict;
use Env;

my $api_key = $ENV{FRED_API_KEY};
$api_key = "none" if not $api_key;

my ($fips,$ymin,$ymax,$xmin,$xmax) = @ARGV;
system "echo $fips > FIPS";
$ymin = 0 if not $ymin;
$ymax = 0 if not $ymax;
$xmin = 0 if not $xmin;
$xmax = 0 if not $xmax;
my $use_shapefile = 0;
$use_shapefile = 0 if $fips eq 15;
my $adjust = 0;
$adjust = 1 if ($ymin eq 0 and $ymax eq 0 and $xmin eq 0 and $xmax eq 0);
system "gnuplot -e 'use_shapefile=$use_shapefile; api_key=\"$api_key\"; force_ymin=$ymin; force_ymax=$ymax; force_xmin=$xmin; force_xmax=$xmax; adjust=$adjust' make_map";
system "mv map.png $fips.png";
system "mv RANGES.plt $fips.bbox";
system "rm back* tmp* google* crop*";
